<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/parent_padding"
    tools:context=".AddToSellPopUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/sell_pop_up_text_view"
        android:layout_width="wrap_content"
        style="@style/Widget.Shopiko01.LargePlaceHolderText"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/add_to_sell" />

    <ImageView
        android:id="@+id/sell_pop_up_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pop_up_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sell_pop_up_text_view"
        app:layout_constraintBottom_toBottomOf="@id/sell_pop_up_text_view"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sell_pop_up_text_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_product_quantity"
        android:layout_marginTop="@dimen/text_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sell_pop_up_text_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sell_pop_up_text"
            style="@style/ShapeAppearance.Material3.Corner.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="250dp"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sell_pop_up_fab"
        style="@style/Widget.Material3.FloatingActionButton.Surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pop_up_arrow"
        android:layout_marginTop="@dimen/text_margin"
        app:maxImageSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/sell_pop_up_text_layout"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>