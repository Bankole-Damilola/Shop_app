<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/parent_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileDetailsFragment">

    <ImageView
        android:id="@+id/profile_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_update_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_detail_text"
        style="@style/Widget.Shopiko01.LargePlaceHolderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:text="@string/update_profile"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/profile_detail_image"
        app:layout_constraintBottom_toBottomOf="@id/profile_detail_image"
        app:layout_constraintStart_toEndOf="@id/profile_detail_image" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_detail_owner_name_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_name"
        android:layout_marginTop="@dimen/text_margin"
        android:hint="@string/enter_your_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_detail_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_detail_owner_name_edit_text"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_detail_shop_name_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_name"
        android:layout_marginTop="@dimen/text_margin"
        android:hint="@string/enter_your_shop_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_detail_owner_name_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_detail_shop_name_edit_text"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_detail_phone_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_phone"
        android:layout_marginTop="@dimen/text_margin"
        android:hint="@string/enter_your_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_detail_shop_name_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_detail_phone_edit_text"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_detail_update_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/parent_padding"
        app:cornerRadius="@dimen/parent_padding"
        android:layout_height="65dp"
        android:text="@string/update_profile"
        app:layout_constraintTop_toBottomOf="@id/profile_detail_phone_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>