<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/text_margin"
    app:cardCornerRadius="@dimen/between_element"
    android:layout_marginBottom="@dimen/between_element"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:padding="@dimen/between_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/catalog_page_sell_list_name"
            style="@style/Widget.Shopiko01.LessOpaqueText"
            android:minWidth="150dp"
            android:maxWidth="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Canon camera"/>

        <TextView
            android:id="@+id/catalog_page_sell_list_qty"
            style="@style/Widget.Shopiko01.LessOpaqueText"
            android:layout_marginStart="@dimen/text_margin"
            android:minWidth="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/catalog_page_sell_list_name"
            app:layout_constraintTop_toTopOf="@id/catalog_page_sell_list_name"
            app:layout_constraintBottom_toBottomOf="@id/catalog_page_sell_list_name"
            tools:text="5" />

        <TextView
            android:id="@+id/catalog_page_sell_list_price"
            style="@style/Widget.Shopiko01.LessOpaqueText"
            android:minWidth="100dp"
            android:maxWidth="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            app:layout_constraintStart_toEndOf="@id/catalog_page_sell_list_qty"
            app:layout_constraintTop_toTopOf="@id/catalog_page_sell_list_qty"
            app:layout_constraintBottom_toBottomOf="@id/catalog_page_sell_list_qty"
            tools:text="$200" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
